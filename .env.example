# Default ports for each microservice
CMS_PORT=3000
DISCOVERY_PORT=3001

# PostgreSQL host and port
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=octonyah

# RabbitMQ Configuration (connection string, queue name, and prefetch count for consumers (default 1))
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=video-events
RABBITMQ_PREFETCH=1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL_SECONDS=300

# Elasticsearch Configuration (Elasticsearch node URL, basic auth credentials, and index name for videos)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=videos

# JWT Configuration
JWT_SECRET=super-secret-key
JWT_EXPIRES_IN_SECONDS=3600

# YouTube Data API v3 key, get from Google Cloud console
YOUTUBE_API_KEY=YOUTUBE_API_KEY

# Environment (development/production)
NODE_ENV=development