{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "projects": {
    "cms-service": {
      "type": "application",
      "root": "apps/cms-service",
      "sourceRoot": "apps/cms-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/cms-service/tsconfig.app.json",
        "webpack": false
      }
    },
    "discovery-service": {
      "type": "application",
      "root": "apps/discovery-service",
      "sourceRoot": "apps/discovery-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/discovery-service/tsconfig.app.json",
        "webpack": false
      }
    },
    "shared-programs": {
      "type": "library",
      "root": "libs/shared-programs",
      "sourceRoot": "libs/shared-programs/src",
      "entryFile": "src/index",
      "compilerOptions": {
        "tsConfigPath": "libs/shared-programs/tsconfig.lib.json"
      }
    }
  }
}
