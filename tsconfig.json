{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@octonyah/shared-videos": ["libs/shared-videos/src"],
      "@octonyah/shared-videos/*": ["libs/shared-videos/src/*"],
      "@octonyah/shared-config": ["libs/shared-config/src"],
      "@octonyah/shared-config/*": ["libs/shared-config/src/*"],
      "@octonyah/shared-events": ["libs/shared-events/src"],
      "@octonyah/shared-events/*": ["libs/shared-events/src/*"],
      "@octonyah/shared-cache": ["libs/shared-cache/src"],
      "@octonyah/shared-cache/*": ["libs/shared-cache/src/*"],
      "@octonyah/shared-video-platforms": ["libs/shared-video-platforms/src"],
      "@octonyah/shared-video-platforms/*": ["libs/shared-video-platforms/src/*"],
      "@octonyah/shared-throttler": ["libs/shared-throttler/src"],
      "@octonyah/shared-throttler/*": ["libs/shared-throttler/src/*"],
      "@cms/*": ["apps/cms-service/src/*"],
      "@discovery/*": ["apps/discovery-service/src/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
